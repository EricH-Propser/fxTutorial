<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PersonEditDialogController" stylesheets="DarkTheme.css">

    <children>
    <GridPane AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="290.0" minWidth="10.0" prefWidth="93.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="472.0" minWidth="10.0" prefWidth="297.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="0">
        </Label>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0">
        </TextField>
        <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="1">
        </Label>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1">
        </TextField>
        <Label text="Street" GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Label>
        <TextField fx:id="streetField" GridPane.columnIndex="1" GridPane.rowIndex="2">
        </TextField>
        <Label text="City" GridPane.columnIndex="0" GridPane.rowIndex="3">
        </Label>
        <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="3">
        </TextField>
        <Label text="Postal Code" GridPane.columnIndex="0" GridPane.rowIndex="4">
        </Label>
        <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="4">
        </TextField>
        <Label text="Birthday" GridPane.columnIndex="0" GridPane.rowIndex="5">
        </Label>
        <TextField fx:id="birthdayField" GridPane.columnIndex="1" GridPane.rowIndex="5">
        </TextField>
    </children>
</GridPane>

        <ButtonBar AnchorPane.bottomAnchor="5" AnchorPane.rightAnchor="5">
            <buttons>
                <Button mnemonicParsing="false" onAction="#handleOk" text="OK" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            </buttons>
        </ButtonBar>

    </children>

</AnchorPane>
